<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.example.khawoat_rmbp.well.Fragment_Masseuse.NotificationMasseuse">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />
    <com.nanchen.titlebar.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleBar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ListView

        android:layout_width="wrap_content"
        android:layout_height="70dp"/>
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar"
        android:id="@+id/rela">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"
            android:id="@+id/start"
            android:visibility="gone"
            />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star0"
            android:id="@+id/start0"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/start1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star1"
            android:visibility="gone"
           />
        <ImageView
            android:id="@+id/start1h5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star15"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star2"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/start2h5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star25"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/start3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star3"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/start3h5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star35"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/start4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star4"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/start4h5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star45"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/start5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star5"
            android:visibility="gone"
            />

    </RelativeLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="คะแนนเฉลี่ย"
            android:id="@+id/text"
            android:textSize="20sp"
        android:layout_below="@+id/rela"
        android:gravity="center"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylcerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text"/>
</RelativeLayout>
