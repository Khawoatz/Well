<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="7dp"
    android:padding="10dp"
    android:layout_margin="7dp"
    card_view:cardBackgroundColor="#F8F8FF"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:background="@drawable/circleimage"/>
        <View
            android:id="@+id/design_line"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imgProfile"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_mass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชื่อพนักงาน"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/design_line"/>
        <TextView
            android:id="@+id/tvNameMass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="name"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_mass"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="คะแนน"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tv_mass"
            android:layout_toRightOf="@+id/design_line"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tv_mass"
            android:layout_toRightOf="@+id/tv_point">
            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"
                android:visibility="gone"

                />
            <ImageView
                android:id="@+id/star0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star0"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star1"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/start1h5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star15"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star2"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/start2h5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star25"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star3"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/start3h5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star35"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star4"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/start4h5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star45"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star5"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </RelativeLayout>





</android.support.v7.widget.CardView>