<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    tools:context="com.example.khawoat_rmbp.well.SignUp">

    <!--<com.flaviofaria.kenburnsview.KenBurnsView-->
        <!--android:id="@+id/image"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:src="@drawable/bgmassage2" />-->

    <ImageView
        android:id="@+id/iv_back2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_action_back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tv_have_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" มีบัญชีอยู่แล้ว "
            android:textSize="17dp"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in !"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/logowell"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logowell4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logowell"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="ลงทะเบียน"
        android:textSize="22dp"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:textColor="@android:color/white" />
    <ScrollView
        android:id="@+id/scRegis"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_sign_up">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_back2"
        android:layout_above="@id/ll_bottom"
        android:layout_marginTop="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_ediitext"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชื่อ"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:inputType="textPersonName"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:hint="ใส่ชื่อของคุณ"
            android:textColor="@android:color/white"
            android:textColorHint="@color/txt_hint"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:lines="1"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_ediitext"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/tv_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="นามสกุล"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/et_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16dp"
                android:hint="ใส่นามสกุลของคุณ"
                android:textColor="@android:color/white"
                android:textColorHint="@color/txt_hint"
                android:background="@android:color/transparent"
                android:lines="1"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_ediitext"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="อีเมล์"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:hint="ใส่อีเมล์ของคุณ"
            android:textColor="@android:color/white"
            android:textColorHint="@color/txt_hint"
            android:lines="1"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_ediitext"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_password_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="รหัสผ่าน"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <com.marlonmafra.android.widget.EditTextPassword
            android:id="@+id/et_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ใส่รหัสผ่านของคุณ"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@color/txt_hint"
            app:iconPosition="right"
            app:hidePasswordIcon="@drawable/ic_hide_password"
            app:showPasswordIcon="@drawable/ic_show_password"
            android:background="@android:color/transparent"
            app:fontPath="fonts/RSUlight.ttf" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_ediitext"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="ยืนยันรหัสผ่าน"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <com.marlonmafra.android.widget.EditTextPassword
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ใส่รหัสผ่านของคุณอีกครั้ง"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@color/txt_hint"
                app:iconPosition="right"
                app:hidePasswordIcon="@drawable/ic_hide_password"
                app:showPasswordIcon="@drawable/ic_show_password"
                android:background="@android:color/transparent"
                app:fontPath="fonts/RSUlight.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_ediitext"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="อายุ"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:hint="ใส่อายุของคุณ"
                android:textColor="@android:color/white"
                android:textColorHint="@color/txt_hint"
                android:maxLength="2"
                android:lines="1"
                android:inputType="phone"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_ediitext"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เพศ"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>

            <RadioGroup
                android:id="@+id/gender_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
>

                <RadioButton
                    android:id="@+id/male_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/female_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Female"
                    />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ediitext"
            android:paddingBottom="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เบอร์โทรศัพท์"
                 android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/et_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:hint="ใส่เบอร์โทรศัพท์ของคุณ"
                android:textColor="@android:color/white"
                android:textColorHint="@color/txt_hint"
                android:maxLength="10"
                android:lines="1"
                android:inputType="phone"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ediitext"
            android:paddingBottom="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เขตพื้นที่"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"/>

            <Spinner
                android:id="@+id/dl_district"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@android:color/white"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ediitext"
            android:paddingBottom="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="จังหวัด"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"/>

            <Spinner
                android:id="@+id/dl_province"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@android:color/white"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ediitext"
            android:paddingBottom="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_idimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="บัตรประชาชน"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn_uploadid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="คลิกที่นี่เพื่ออัพโหลดไฟล์"/>
            
            <ImageView
                android:id="@+id/imgID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="ลงทะเบียน !"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/login_btn"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14dp"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
