<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khawoat_rmbp.well.LoginMasseuse">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bgmassage2" />

    <ImageView
        android:id="@+id/iv_back2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_action_back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_back2"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logowellpros"/>
        <TextView
            android:id="@+id/tv_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_back2"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:text="เข้าสู่ระบบ"
            android:textSize="22dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_ediitext"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="อีเมล์"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:hint="ใส่อีเมล์ของคุณ"
                android:textColor="@android:color/white"
                android:textColorHint="@color/txt_hint"
                android:lines="1"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_ediitext"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="รหัสผ่าน"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <com.marlonmafra.android.widget.EditTextPassword
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ใส่รหัสผ่านของคุณ"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@color/txt_hint"
                app:iconPosition="right"
                app:hidePasswordIcon="@drawable/ic_hide_password"
                app:showPasswordIcon="@drawable/ic_show_password"
                android:background="@android:color/transparent"
                app:fontPath="fonts/RSUlight.ttf" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_forgotpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="ลืมรหัสผ่าน?"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="เข้าสู่ระบบ !"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@android:color/holo_orange_dark"
                android:background="@drawable/login_btn_black"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=" ลงทะเบียนด้วยอีเมล์ "
                android:background="@drawable/register_btn"
                android:layout_centerInParent="true"
                android:layout_below="@+id/BtnLogin"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
